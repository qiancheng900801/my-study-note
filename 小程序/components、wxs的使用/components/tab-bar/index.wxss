.tab-bar {
  display: flex;
  justify-content: center;
  position: sticky;
  top: 0;
}

.tab-bar view {
  padding: 8rpx 12rpx;
}

.tab-bar view {
  margin-right: 140rpx;
}
.tab-bar view:last-child {
  margin-right: 0rpx;
}

.active {
  color: #ef533d;
  position: relative;
}

.active ::after {
  content: '';
  width: 40rpx;
  height: 4rpx;
  background: #ef533d;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}